{
	"title": "Sino's macOS",
	"maintainers": ["sino"],
	"homepage": "https://github.com/SinoThomas/macOS-karabiner-shortcuts",
	"import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/SinoThomas/macOS-karabiner-shortcuts/master/sinos_macOS.json",
	"rules": [
		{
			"description": "CapsLock   to     fn",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "caps_lock"
					},
					"to": [
						{
							"key_code": "fn"
						}
					]
				}
			]
		},
		{
			"description": "fn + D     to     Backspace",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "d",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "delete_or_backspace"
						}
					]
				}
			]
		},
		{
			"description": "fn + E     to     Enter",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "e",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "return_or_enter"
						}
					]
				}
			]
		},
		{
			"description": "fn + JKIL  to     Arrow Keys",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "j",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "left_arrow"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "k",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "down_arrow"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "i",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "up_arrow"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "l",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "right_arrow"
						}
					]
				}
			]
		},
		{
			"description": "fn + UO    to     Move to line Start, End",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "u",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "left_arrow",
							"modifiers": [
								"command"
							]
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "o",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "right_arrow",
							"modifiers": [
								"command"
							]
						}
					]
				}
			]
		},
		{
			"description": "fn + NM    to     Delete Words",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "n",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "delete_or_backspace",
							"modifiers": [
								"left_option"
							]
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "m",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "delete_forward",
							"modifiers": [
								"left_option"
							]
						}
					]
				}
			]
		},
		{
			"description": "fn + /,.   to     Delete line full, Start, End",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "slash",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "right_arrow",
							"modifiers": [
								"command"
							]
						},
						{
							"key_code": "left_arrow",
							"modifiers": [
								"command",
								"left_shift"
							]
						},
						{
							"key_code": "delete_or_backspace"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "comma",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "left_arrow",
							"modifiers": [
								"command",
								"shift"
							]
						},
						{
							"key_code": "delete_or_backspace"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "period",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"key_code": "right_arrow",
							"modifiers": [
								"command",
								"shift"
							]
						},
						{
							"key_code": "delete_or_backspace"
						}
					]
				}
			]
		},
		{
			"description": "fn + f     to     Open Finder",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "f",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"shell_command": "open -a 'finder'"
						}
					]
				}
			]
		},
		{
			"description": "fn + f     to     Open Terminal",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "t",
						"modifiers": {
							"mandatory": [
								"fn"
							]
						}
					},
					"to": [
						{
							"shell_command": "open -na 'terminal'"
						}
					]
				}
			]
		}
	]
}
